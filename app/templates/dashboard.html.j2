{% extends "base.html.j2" %}

{% block content %}

<div class="container">
<div class="row navigation">
    <div class="col">
            <a href="{{ url_for('homepage') }}">home</a>
    </div>
</div>
{% for post in random_posts %}
        {% if post.type == 'img' %}
            <img title=" <{{ post.nickname }}> {{ post.content }}" style="width: 100px" onclick="resize(this)" src="{{ post.url }}">
        {% else %}
            <a href="{{ post.url }}">{{ post.filename }}</a>
        {% endif %}
{% endfor %}
    <div class="row navigation">
        <div class="col">
                <a href="{{ url_for('dashboard') }}">MOAR dashboard</a>
        </div>
    </div>
</div>

{% endblock content %}
