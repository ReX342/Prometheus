{% extends "base.html.j2" %}

{% block content %}

<div class="container">
<div class="row navigation">
    <div class="col">
        {% if previouspage < 1 %}
        {% else %}
            <a href="{{ url_for('pagination', page=previouspage) }}">previous page</a>
        {% endif %}
    </div>
    <div class="col">
            <a href="{{ url_for('homepage') }}">home</a>
    </div>
    <div class="col">
        <a href="{{ url_for('pagination', page=nextpage) }}">next page</a>
    </div>
</div>
{% for post in posts %}
    <div class="row">
        <div class="col"></div>
        <div class="col">
        <span class="nickname">{{ post.nickname }}</span>
        <span class="timestamp">{{ post.timestamp }}</span>
        <br>
        <span class="message">{{ post.content }}</span>
        <br>
        {% if post.type == 'img' %}
            <img src="{{ post.url }}">
        {% else %}
            <a href="{{ post.url }}">{{ post.filename }}</a>
        {% endif %}
        </div>
        <div class="col"></div>
    </div>
    <hr>
{% endfor %}
    <div class="row navigation">
        <div class="col">
            {% if previouspage < 1 %}
            {% else %}
                <a href="{{ url_for('pagination', page=previouspage) }}">previous page</a>
            {% endif %}
        </div>
        <div class="col">
                <a href="{{ url_for('homepage') }}">home</a>
        </div>
        <div class="col">
            <a href="{{ url_for('pagination', page=nextpage) }}">next page</a>
        </div>
    </div>
</div>

{% endblock content %}
